[user]
	name = Alex Piechowski
	email = alex@piechowski.io
[core]
	editor = vim
	excludesfile = /home/alex/.gitignore_global
	mergeoptions = --no-edit
[push]
	default = simple
[diff]
	tool = bc3
[difftool]
	bc3 = trustExitCode
[merge]
	tool = bc3
[mergetool]
	bc3 = trustExitCode
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
