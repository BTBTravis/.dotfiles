# Fonts
URxvt.font:     xft:bitstream vera sans mono:size=8:antialias=true
URxvt.boldFont: xft:bitstream vera sans mono:bold:size=8:antialias=true

URxvt.letterSpace: -1

# Theme
urxvt*foreground: white
urxvt*background: black

*color0:  #2E3436
*color1:  #a40000
*color2:  #4E9A06
*color3:  #C4A000
*color4:  #3465A4
*color5:  #75507B
*color6:  #ce5c00
*color7:  #babdb9
*color8:  #555753
*color9:  #EF2929
*color10: #8AE234
*color11: #FCE94F
*color12: #729FCF
*color13: #AD7FA8
*color14: #fcaf3e
*color15: #EEEEEC

urxvt.transparent: true
urxvt.shading: 15
urxvt.scrollBar: false
urxvt.cursorBlink: true


# Misc
URxvt*loginShell: true
urxvt.saveLines: 1000000
URxvt*scrollTtyKeypress:  true
URxvt*scrollTtyOutput:  false

# control arrows to skip words
# urxvt.keysym.Control-Up:    \033[1;5A
# urxvt.keysym.Control-Down:  \033[1;5B
# urxvt.keysym.Control-Left:  \033[1;5D
# urxvt.keysym.Control-Right: \033[1;5C

# control + shift + v paste
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.iso14755: False
URxvt.perl-ext-common: default,clipboard

# double click selection delims
URxvt*cutchars: BACKSLASH '"'&()*,;<=>?@[]^{|}
